<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:fitsSystemWindows="true"
                                            android:background="#d3d3d3"

    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#d3d3d3"
              android:layout_marginBottom="20dp"
                android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp"
              android:orientation="vertical"
             >

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/white"
   >

        <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/event_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:layout_marginTop="15dp"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:typeface="serif"
                    android:gravity="center"

            />

    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="@color/date_picker_view_animator" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_date_from"
                android:text="12-Nov-2017 at 8:30 AM"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                />

        </LinearLayout>
        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="12sp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/event_date_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12-Nov-2017 at 8:30 AM"
                android:paddingTop="2dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/date_picker_view_animator" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/location_map_view_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/location_map_view"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_info_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal|bottom"
                >

                <at.markushi.ui.CircleButton
                    android:id="@+id/btnSelectImageFromDevice"
                    android:layout_width="45dip"
                    android:layout_height="45dip"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_location_on_black_18dp"
                    android:padding="5dp"
                    app:cb_color="#d3d3d3"
                    app:cb_pressedRingWidth="5dip" />


                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/event_location_text_view"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:lines="@android:integer/config_longAnimTime"
                    android:layout_weight="1.0"
                    android:paddingTop="10dp"
                    android:gravity="fill_vertical"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:inputType="textMultiLine"
                    android:text="location xyz"
                    android:paddingLeft="2dp"
                    android:paddingBottom="7dp"
                    android:paddingRight="4dp"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/date_picker_view_animator" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:orientation="vertical">



            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                />


            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_description"
                android:text="Detail"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="14sp"
                android:layout_marginBottom="1dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/date_picker_view_animator" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:paddingLeft="15dp"
                android:paddingTop="1dp"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:padding="3dp">

        <ImageView
            android:id="@+id/admin_image"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.0"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_marginRight="2dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.0"
                android:paddingLeft="10dp"
                >

                <TextView
                    android:id="@+id/admin_name"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:paddingTop="5dp"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/admin_status"
                    android:textColor="#6c7880"
                    android:textSize="12sp"
                    android:text="user staus is xys "
                    android:inputType="textImeMultiLine"
                    android:lines="2"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <at.markushi.ui.CircleButton
                android:id="@+id/user_status_mode"
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:layout_gravity="center"
                android:gravity="center"
                app:cb_color="@color/colorActiveGreen"/>


            <at.markushi.ui.CircleButton
                android:id="@+id/navigate_admin_profile"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_navigate_next_white_24dp"
                app:cb_color="@color/colorPrimary"
                app:cb_pressedRingWidth="5dip" />


        </LinearLayout>

    </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/date_picker_view_animator" />
    </LinearLayout>





    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other"
            android:paddingLeft="13dp"
            android:paddingTop="1dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            >
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                >

                <EditText android:id="@+id/event_visibility_miles"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="text"
                          android:hint="Visibility Miles"
                          android:text="20 Miles"
                          android:paddingLeft="5dp"
                          android:enabled="false"
                          android:textColorHint="@color/colorPrimaryDark"
                          android:textColor="@color/transparent_black"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_margin="0dp">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                >
                <EditText android:id="@+id/event_capacity"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="text"
                          android:hint="Capacity"
                          android:text="38 people"
                          android:paddingLeft="5dp"
                          android:enabled="false"
                          android:textColorHint="@color/colorPrimaryDark"
                          android:textColor="@color/transparent_black"/>
            </android.support.design.widget.TextInputLayout>




        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            >
            <EditText android:id="@+id/event_type"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="text"
                      android:hint="Category"
                      android:text="Type"
                      android:paddingLeft="5dp"
                      android:enabled="false"
                      android:textColorHint="@color/colorPrimaryDark"
                      android:textColor="@color/transparent_black"/>
        </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:id="@+id/linear_layout_with_admin_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:visibility="gone"
    android:gravity="center" >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/event_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:background="@drawable/content_main2_button_color"
            android:text="Edit"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/event_delete"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:background="@drawable/content_main2_button_color"
            android:text="Delete"/>
    </LinearLayout>


</LinearLayout>

</android.support.v4.widget.NestedScrollView>