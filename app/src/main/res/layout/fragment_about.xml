<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent"
                                            android:fitsSystemWindows="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#d3d3d3"
              android:orientation="vertical"
             >

    <!-- TODO: Update blank fragment layout -->
    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_name"
        android:text="Even Name"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginBottom="10dp"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="15dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date/Time"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"

        android:background="@color/cardview_light_background">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/colorPrimaryTransparent">
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/time_from"
            android:gravity="left"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:textSize="40dp"
            android:text="8:30"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <com.devspark.robototextview.widget.RobotoTextView
            android:gravity="bottom"
            android:id="@+id/time_from_am_pm"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:paddingLeft="2dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/transparent_black"
            android:layout_gravity="bottom"
            android:text="AM"/>

        <View
            android:layout_width="3dp"
            android:layout_height="32dp"
            android:paddingTop="5dp"
            android:layout_margin="10dp"
            android:background="@color/circle_background" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/date_from"
            android:gravity="bottom"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="10-Non-2016"
            android:paddingBottom="10dp"
            android:textSize="20dp"/>
    </LinearLayout>

    <com.devspark.robototextview.widget.RobotoTextView
        android:gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/transparent_black"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="TO"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/colorPrimaryTransparent">
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/time_to"
            android:gravity="left"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:textSize="40dp"
            android:text="8:30"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/time_to_am_pm"
            android:gravity="bottom"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:paddingLeft="2dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/transparent_black"
            android:layout_gravity="bottom"
            android:text="AM"/>

        <View
            android:layout_width="3dp"
            android:layout_height="32dp"
            android:paddingTop="5dp"
            android:layout_margin="10dp"
            android:background="@color/circle_background" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/date_to"
            android:gravity="bottom"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="10-Non-2016"
            android:paddingBottom="10dp"
            android:textSize="20dp"/>
    </LinearLayout>
    </LinearLayout>

    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/place_autocomplete_search_hint">

        <LinearLayout
            android:id="@+id/location_map_view_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">

            <com.google.android.gms.maps.MapView
                android:id="@+id/location_map_view"
                android:layout_width="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_height="170dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/location_info_linear_layout"
            android:layout_width="fill_parent"
            android:paddingTop="4dp"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@color/cardview_light_background">

            <at.markushi.ui.CircleButton
                android:id="@+id/btnSelectImageFromDevice"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:padding="10dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_location_on_black_18dp"
                app:cb_color="@color/colorPrimary"
                app:cb_pressedRingWidth="5dip" />

            <View
                android:layout_width="3dp"
                android:layout_height="fill_parent"
                android:paddingTop="5dp"
                android:layout_margin="10dp"
                android:background="@color/place_autocomplete_search_hint" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/event_location_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:background="@color/white"
                    android:text="location"
                    android:paddingLeft="15dp"
                    android:paddingRight="4dp"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/event_visiblirt_miles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:background="@color/white"
                    android:text="3 mile visile"
                    android:paddingLeft="15dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="4dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    <com.devspark.robototextview.widget.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/curve_liner_layout"
        android:padding="3dp"
        >

        <ImageView
            android:id="@+id/admin_image"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="60dp" />


        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_width="0dip"
            android:layout_marginTop="3dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1.0"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_marginRight="2dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.0"
                android:paddingLeft="10dp"
                >

                <TextView
                    android:id="@+id/admin_name"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:paddingTop="5dp"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/admin_status"
                    android:textColor="#6c7880"
                    android:textSize="12sp"
                    android:text="user staus is xys "
                    android:inputType="textImeMultiLine"
                    android:lines="2"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="10dp"-->
                <!--android:background="@color/place_autocomplete_search_hint" />-->
            </LinearLayout>

            <at.markushi.ui.CircleButton
                android:id="@+id/user_status_mode"
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:layout_gravity="center"
                android:gravity="center"
                app:cb_color="@color/colorActiveGreen"/>


            <at.markushi.ui.CircleButton
                android:id="@+id/navigate_admin_profile"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_navigate_next_white_24dp"
                app:cb_color="@color/colorPrimary"
                app:cb_pressedRingWidth="5dip" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="22dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryTransparent">

        <com.devspark.robototextview.widget.RobotoTextView
            android:gravity="bottom"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:paddingLeft="2dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/transparent_black"
            android:layout_gravity="center"
            android:text="Event capacity : "/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/event_capacity"
            android:gravity="bottom"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:paddingLeft="2dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/transparent_black"
            android:layout_gravity="bottom"
            android:text="38"/>

    </LinearLayout>

<LinearLayout
    android:id="@+id/linear_layout_with_admin_options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:gravity="center" >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/event_edit"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:background="@drawable/content_main2_button_color"
            android:text="Edit"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/event_delete"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:background="@drawable/content_main2_button_color"
            android:text="Delete"/>
    </LinearLayout>


</LinearLayout>

</android.support.v4.widget.NestedScrollView>