<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@android:color/white"
    android:orientation="vertical"
              android:adjustViewBounds="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:adjustViewBounds="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true">


        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:transitionName="event_transition"
            android:src="@drawable/logo" />


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="#AA575656"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <!--<ImageView-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="35dp"-->
                    <!--android:src="@drawable/ic_date_time"/>-->

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   >
                   <com.devspark.robototextview.widget.RobotoTextView
                       android:id="@+id/event_time_from_now"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="8dp"
                       android:text="Event Location"
                       android:textColor="@color/white"
                       android:textSize="11sp" />
                       android:textColor="@android:color/holo_orange_dark"/>
               </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:orientation="vertical">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textColor="@android:color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/event_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Location"
                android:paddingTop="2dp"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="3dp"
                android:background="@color/date_picker_view_animator" />


            <LinearLayout
                android:id="@+id/event_info_event_away_distance_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="18dp"
                    android:layout_height="16dp"
                    android:elevation="20dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_arrow_drop_down_black_18dp"
                    app:civ_border_color="@color/transparent_black"
                    app:civ_border_width="1dp"
                    app:layout_collapseMode="parallax" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/map_view_event_info_event_away_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="16dp"
                    android:text="2 Mile"
                    android:textColor="#6c7880"
                    android:textSize="12sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="left"
                    android:elevation="20dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_directions_car_black_24dp"
                    app:civ_border_color="@color/transparent_black"
                    app:layout_collapseMode="parallax" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/map_view_event_info_event_away_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:text="30 min"
                    android:textColor="#6c7880"
                    android:textSize="12sp" />
                <ImageView
                    android:id="@+id/event_source_image"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:elevation="20dp"
                    android:layout_gravity="center"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/com_facebook_button_icon_blue"
                    app:layout_collapseMode="parallax" />

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>