<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.java.eventfy.Fragments.CreatePublicEvent.Page2"
    >


    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flexible_space_image_height"
        android:background="@android:color/transparent" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_anchor="@id/overlay"
        android:padding="16dp"

        >
        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/flexible_space_image_height"
            android:src="@drawable/logo"
            android:paddingTop="10dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp">
            <EditText android:id="@+id/event_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textEmailAddress"
                      android:hint="Event Name"
                      android:textColor="@color/cardview_shadow_end_color"  />
        </android.support.design.widget.TextInputLayout>

        <Spinner

            android:id="@+id/public_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:color="@color/cardview_shadow_end_color"
            style="@style/spinner_style"
            android:layout_marginBottom="16dp"
            />

        <!--Date of event-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Event Date"
            android:id="@+id/public_event_date_lable"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:paddingLeft="50dp"
            android:paddingRight="16dp"
            >
            <EditText android:id="@+id/public_event_date_from"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textCapWords|date"
                      android:hint="From"
                      android:textColor="@color/cardview_shadow_end_color"
                      android:focusable="false"
                      android:clickable="true"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:paddingLeft="50dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="16dp"
            >
            <EditText android:id="@+id/public_event_date_to"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textCapWords|date"
                      android:hint="To"
                      android:textColor="@color/cardview_shadow_end_color"
                      android:focusable="false"
                      android:clickable="true"
                />
        </android.support.design.widget.TextInputLayout>


        <!--Time of event-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Event Time"
            android:id="@+id/public_event_time_lable"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:paddingLeft="50dp"
            android:paddingRight="20dp"
            >
            <EditText android:id="@+id/public_event_time_from"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textCapWords|date"
                      android:hint="From"
                      android:textColor="@color/cardview_shadow_end_color"
                      android:focusable="false"
                      android:clickable="true"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:paddingLeft="50dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="16dp"
            >
            <EditText android:id="@+id/public_event_time_to"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="textCapWords|date"
                      android:hint="To"
                      android:textColor="@color/cardview_shadow_end_color"
                      android:focusable="false"
                      android:clickable="true"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/public_public_event_page1_next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="50dp"
            android:padding="12dp"
            android:background="@color/colorPrimary"
            android:text="Next"/>
    </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/overlay"
        app:layout_anchorGravity="bottom|right|end"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_camera_enhance_black_24dp"
         />


</android.support.design.widget.CoordinatorLayout>
