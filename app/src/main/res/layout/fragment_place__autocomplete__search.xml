<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="2dp"
        android:layout_marginBottom="2dp"
        android:paddingLeft="1pt"
        android:paddingRight="1dp"
        android:background="@color/white"
        android:orientation="vertical">


    <LinearLayout
                android:id="@+id/location_map_view_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_black"
                >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.google.android.gms.maps.MapView
                    android:id="@+id/location_map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1.0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="55dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="@color/map_transperant"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1.0"
                        android:textAlignment="center">

                        <SeekBar
                            android:id="@+id/remote_event_visibliry_miles"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1.0"
                            android:clickable="true"
                            android:focusable="false"
                            android:hint="End Date"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:inputType="textCapWords|date"
                            android:max="40"
                            android:progress="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark" />
                    </android.support.design.widget.TextInputLayout>

                    <com.devspark.robototextview.widget.RobotoTextView
                        android:id="@+id/remote_event_visibliry_miles_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/places_ic_clear"
                        android:text="10 Miles"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp"
                         />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:gravity="center">
                    <at.markushi.ui.CircleButton
                        android:id="@+id/map_view_full_mode"
                        android:layout_width="55dp"
                        android:layout_height="45dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:src="@drawable/ic_global_holo"
                        app:cb_color="@color/map_transperant"
                        android:scaleType="fitXY"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/remote_search_map"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:paddingLeft="70dp"
                        android:paddingRight="70dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="2dp"
                        android:background="@drawable/content_main2_button_color"
                        android:text="Search"
                        android:textColor="@color/white" />

                </LinearLayout>





                <LinearLayout
                    android:id="@+id/remote_view_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="#00FFFFFF"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:elevation="20dp"
                        android:background="@color/map_transperant"
                        app:cardCornerRadius="2dp"
                        app:cardBackgroundColor="@color/map_transperant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/location_edit_text_linear_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:background="@color/map_transperant"
                            >

                            <ImageView
                                android:id="@+id/imgSearch1"
                                android:layout_width="wrap_content"
                                android:scaleType="fitCenter"
                                android:layout_height="23dp"
                                android:paddingLeft="5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_search_holo" />


                            <AutoCompleteTextView
                                android:id="@+id/autocomplete_places"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:hint="Enter Address"
                                android:inputType="textMultiLine"
                                android:maxLines="3"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:background="@android:color/transparent"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:paddingLeft="45dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="40dp"
                                android:scrollbars="vertical"
                                android:textColor="@color/transparent_black"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"/>

                            <ImageView
                                android:id="@+id/clear_autocomplete_text_view_btn"
                                android:layout_width="wrap_content"
                                android:layout_alignParentRight="true"
                                android:scaleType="fitCenter"
                                android:layout_height="23dp"
                                android:visibility="gone"
                                android:layout_centerVertical="true"
                                android:paddingRight="8dp"
                                android:src="@drawable/places_ic_clear" />


                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:elevation="20dp"
                            android:background="@color/map_transperant"
                            app:cardCornerRadius="2dp"
                            app:cardBackgroundColor="@color/map_transperant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:id="@+id/location_info_linear_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:background="@color/map_transperant"
                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:scaleType="fitCenter"
                                    android:layout_height="23dp"
                                    android:paddingLeft="5dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_location_holo" />

                                <com.devspark.robototextview.widget.RobotoTextView
                                    android:id="@+id/event_location_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:text="location"
                                    android:textSize="16sp"
                                    android:paddingRight="40dp"
                                    android:paddingLeft="45dp"/>

                                <ImageView
                                    android:id="@+id/edit_location_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:scaleType="fitCenter"
                                    android:layout_height="23dp"
                                    android:layout_centerVertical="true"
                                    android:paddingRight="8dp"
                                    android:src="@drawable/ic_edit_holo" />

                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <at.markushi.ui.CircleButton
                            android:layout_width="50dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            app:cb_color="@color/white"
                            android:id="@+id/hide_show_advance_search_btn"
                            android:src="@drawable/ic_arrow_drop_down_black_18dp"/>

                        <android.support.v7.widget.CardView
                            android:elevation="10dp"
                            android:background="@color/transparent_white"
                            app:cardCornerRadius="2dp"
                            android:visibility="gone"
                            android:layout_marginBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                        <LinearLayout
                            android:id="@+id/advance_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="8dp"
                            >

                            <com.devspark.robototextview.widget.RobotoEditText
                                android:id="@+id/remote_event_start_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Date/Time"
                                android:editable="false"
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:background="@android:color/transparent"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                android:drawableLeft="@drawable/ic_calender_holo"
                                android:drawablePadding="16dp"
                                android:paddingLeft="8dp"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:background="@color/transparent_black" />

                    <LinearLayout
                      android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                      android:orientation="vertical"
                    >
                        </LinearLayout>
                     </LinearLayout>
</android.support.v7.widget.CardView>
                    </LinearLayout>



                </LinearLayout>


            </RelativeLayout>
            </LinearLayout>
</LinearLayout>



