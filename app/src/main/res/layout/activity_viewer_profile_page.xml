<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_viewer_profile_page"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.java.eventfy.ViewerProfilePage">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/logo"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/user_status_linear_layout"
                android:layout_marginTop="15dp">
                <TextView
                    android:text=" Status "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_layout_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/cardview_light_background"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">


                <EditText android:id="@+id/user_status"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="textMultiLine"
                          android:maxLines="3"
                          android:focusable="false"
                          android:hint="Status"
                          android:text="User's status"
                          android:textColorHint="@color/colorPrimaryDark"
                          android:textColor="@color/transparent_black"/>

            </LinearLayout>

            <!-- Personal info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                >
                <TextView
                    android:text=" Personal Information "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/cardview_light_background"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    >

                </android.support.design.widget.TextInputLayout>

                <TextView android:id="@+id/user_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="text"
                          android:hint="User Name"
                          android:text="User Name"
                          android:textColorHint="@color/colorPrimaryDark"
                          android:textColor="@color/transparent_black"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:text=" Visibiliry Miles "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
                <!--<at.markushi.ui.CircleButton-->
                <!--android:layout_width="25dp"-->
                <!--android:layout_height="25dp"-->
                <!--android:padding="6dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--app:cb_color="@color/colorPrimary"-->
                <!--app:cb_pressedRingWidth="3dip"-->
                <!--android:src="@drawable/ic_mode_edit_white_24dp" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/cardview_light_background"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/btnSelectImageFromDevice"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Visible"
                        android:padding="8dp"
                        android:src="@drawable/ic_camera_enhance_black_24dp" />


                    <RadioButton
                        android:layout_height="30dp"
                        android:layout_width="30dp"
                        android:layout_weight="0.1"
                        android:padding="8dp"
                        android:id="@+id/user_visible"
                        android:layout_gravity="center"
                        android:layout_marginRight="18dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginLeft="45dp"
                    android:gravity="center">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
