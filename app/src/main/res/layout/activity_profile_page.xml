<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:background="#d3d3d3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/user_profile_pic"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:elevation="10dp"
                    android:background="@drawable/user_image"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    app:layout_collapseMode="parallax" />

            </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:id="@+id/user_status_linear_layout"
            android:layout_marginTop="15dp">
               <TextView
                   android:text=" Status "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="14sp"
                   android:layout_marginBottom="4dp"
                   android:layout_marginLeft="8dp"
                   android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

           </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp"
                app:cardCornerRadius="2dp"
           >
            <LinearLayout
                 android:id="@+id/linear_layout_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/cardview_light_background"
                android:paddingTop="5dp"
                 android:paddingLeft="20dp"
                android:paddingBottom="5dp">


                <EditText android:id="@+id/user_status"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="textMultiLine"
                          android:maxLines="3"
                          android:enabled="false"
                          android:hint="Status"
                          android:text="User's status"
                          android:textColorHint="@color/colorPrimaryDark"
                          android:textColor="@color/transparent_black"/>

            </LinearLayout>
</android.support.v7.widget.CardView>
            <!-- Personal info -->
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="10dp"

               >
                      <TextView
                          android:text=" Personal Information "
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:layout_marginBottom="4dp"
                          android:layout_marginLeft="8dp"
                          android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>


           </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp"
                app:cardCornerRadius="2dp"
                >

            <LinearLayout
                           android:layout_width="fill_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:layout_marginTop="4dp"
                           android:layout_gravity="center_horizontal|bottom"
                           android:background="@color/cardview_light_background"
                           android:paddingTop="5dp"
                           android:paddingLeft="20dp"
                           android:paddingBottom="5dp">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    >
                <EditText android:id="@+id/user_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:inputType="text"
                          android:hint="User Name"
                          android:text="User Name"
                          android:enabled="false"
                          android:textColorHint="@color/colorPrimaryDark"
                          android:textColor="@color/transparent_black"/>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    >
                    <EditText android:id="@+id/user_id"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:inputType="text"
                              android:hint="Email"
                              android:enabled="false"
                              android:text="Email"
                              android:textColorHint="@color/colorPrimaryDark"
                              android:textColor="@color/transparent_black"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"

                    >


                <EditText android:id="@+id/user_dob"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:inputType="text"
                      android:hint="Date of Birth(MM/DD/YYYY)"
                      android:text="03/28/1992"
                      android:enabled="false"
                      android:textColorHint="@color/colorPrimaryDark"
                      android:textColor="@color/transparent_black"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
</android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:text=" Visibility Miles "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
                <!--<at.markushi.ui.CircleButton-->
                    <!--android:layout_width="25dp"-->
                    <!--android:layout_height="25dp"-->
                    <!--android:padding="6dp"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--app:cb_color="@color/colorPrimary"-->
                    <!--app:cb_pressedRingWidth="3dip"-->
                    <!--android:src="@drawable/ic_mode_edit_white_24dp" />-->
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp"
                app:cardCornerRadius="2dp"
                >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/cardview_light_background"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">


                <SeekBar
                    android:id="@+id/user_visibility_miles"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="6dp"/>

                <TextView
                        android:layout_width="55dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:text="100"
                        android:id="@+id/user_visibility_miles_text_view"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/ic_send_black_24dp" />

            </LinearLayout>
</android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:text=" Visibility Mode "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
                <!--<at.markushi.ui.CircleButton-->
                    <!--android:layout_width="25dp"-->
                    <!--android:layout_height="25dp"-->
                    <!--android:padding="6dp"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--app:cb_color="@color/colorPrimary"-->
                    <!--app:cb_pressedRingWidth="3dip"-->
                    <!--android:src="@drawable/ic_mode_edit_white_24dp" />-->
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="1dp"
                app:cardCornerRadius="2dp"
                >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/cardview_light_background"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/btnSelectImageFromDevice"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Visible"
                    android:padding="8dp"
                    android:src="@drawable/ic_camera_enhance_black_24dp" />

                    <TextView
                        android:id="@+id/btnCommentSend1"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:padding="8dp"
                        android:text="DoNotDisturb"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/ic_send_black_24dp" />


                    <TextView
                        android:id="@+id/btnCommentSend2"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:padding="8dp"
                        android:text="invisible"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/ic_send_black_24dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginLeft="45dp"
                    android:gravity="center">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkedButton="@+id/user_visibility_mode"
                        android:orientation="horizontal"
                        android:layout_weight="1.0">

                        <RadioButton
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:layout_weight="1.0"
                            android:padding="8dp"
                            android:id="@+id/user_visible"
                            android:layout_gravity="center"
                            android:layout_marginRight="18dp"
                            android:gravity="center"/>


                        <RadioButton
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:layout_weight="1.0"
                            android:padding="8dp"
                            android:id="@+id/user_donotdisturb"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                        <RadioButton
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:layout_weight="1.0"
                            android:padding="8dp"
                            android:id="@+id/user_invisible"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </RadioGroup>
                </LinearLayout>
                    </LinearLayout>
</android.support.v7.widget.CardView>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_save_user_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:background="@drawable/content_main2_button_color"
                android:text="Save"/>


            <TextView android:id="@+id/link_chnage_password"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="Change password?"
                      android:layout_marginBottom="20dp"
                      android:gravity="center"
                      android:textSize="16dip"
                      android:textColor="@color/transparent_black"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>

