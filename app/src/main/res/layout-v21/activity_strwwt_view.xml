<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_strwwt_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.java.eventfy.StreetView"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.google.android.gms.maps.StreetViewPanoramaView
            android:id="@+id/steet_view_panorama"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="top"
            app:layout_collapseMode="parallax"
            app:popupTheme="@style/AppTheme.Dark"
            app:titleMarginTop="15dp" />

        <TextView
            android:id="@+id/view_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_black"
            android:text="Nearest street view within the 1000 meters"
            android:textSize="15sp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/no_street_view_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/map_transperant"
            android:text="Unfortunately, this event do not have street view"
            android:textSize="18sp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:textColor="@color/colorBlackTransparent"
            android:layout_centerInParent="true"
            />


    </RelativeLayout>


</LinearLayout>
