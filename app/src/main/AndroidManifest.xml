        <activity android:name=".YouTubeMediaPlayActivity"
            android:theme="@style/Theme.AppCompat.Dialog.MinWidth">
        </activity>
        <activity android:name=".EventVideo">
        </activity>

        <receiver android:name=".Services.AlarmReceiver"/>
    </application>

</manifest>